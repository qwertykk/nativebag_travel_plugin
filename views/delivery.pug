div.address.main#address_form
    div
        h2 Delivery details
    form.delivery_details#delivery_details(enctype = 'multipart/form-data', method='post')
        div
            label(for='name') Name:
            input#name(type='text', placeholder='Name' name='Name' required)
        div
            label(for='Address') Address:
            textarea#address(type='text', placeholder='Address' name='Address' required)
        div
            label(for='landmark') Landmark:
            input#landmark(type='text', placeholder='Landmark' name='Landmark' required)
        // TODO: add pattern for mobile number
        div
            label(for='Mobile') Mobile:
                input#mobile(type='text', placeholder='Mobile Number' name='Mobile' maxlength='16' required)
        div
            label(for='Email') Email:
            input#email(type='email', placeholder='Email Id' name='Email' required)
        div
            label(for='city') City:
            input#city(type='text', placeholder='City' name='City' required)
        div
            label(for='state') State:
            input#state(type='text', placeholder='State' name='State' required)
        div
            label(for='pincode') Pincode:
            input#pincode(type='text', placeholder='Pincode' name='Pincode' required)
        button(type='submit') Confirm